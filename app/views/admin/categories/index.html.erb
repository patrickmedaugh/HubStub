<div class="admin-catgory">
  <h3>Categories</h3>
  <div class="col-md-8 pull-right top-button">
    <%= link_to "Create Category", new_admin_category_path, class: "btn btn-default" %>
  </div>
</div>
<div class="col-md-6 col-md-offset-3 well">
  <table class="table table-hover admin-category-table" >
    <thead>
      <th>Name</th>
      <th></th>
    </thead>
    <tbody>
      <% cache @categories do %>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-default" %></td>
          <% if @main_categories.include?(category)%>
            <td></td>
          <% else %>
            <td><%= link_to "Delete", admin_category_path(category), method: :delete, class: "btn btn-default" %></td>
          <% end %>
        </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
